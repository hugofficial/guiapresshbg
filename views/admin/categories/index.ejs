<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>

<div class="container mb-3">
  <hr />
  <h2>Categorias</h2>
  <a class="btn btn-outline-info mt-1" 
  href="/admin/categories/new">Criar nova categorias</a>
  <hr />
  <div class="cad text-center">
  <div class="card-body">
  <table class="table table-striped table-hover mb-5">
    <thead class="thead-dark">
      <tr>
        <th class="align-text-bottom">Id</th>
        <th class="align-text-bottom">Título</th>
        <th class="align-text-bottom">Slug</th>
        <th class="align-text-bottom">Ações</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% categories.forEach(category => {%>
          
          <tr>
            <th class="align-text-bottom"><%= category.id %></th>
            <th class="align-text-bottom"><%= category.title %></th>
            <th class="align-text-bottom"><%= category.slug %></th>
            <th class="align-text-bottom">
             
                <a href="/admin/categories/edit/<%= category.id %>" 
                  class="btn btn-outline-info mt-2"
                >
                Editar
                </a>
              

              <form method="POST" 
              action="/categories/delete" 
              style="display:inline;" 
              onsubmit="confimarDelecao(event, this)"
              >

                <input type="hidden" name="id" value="<%= category.id %>">
                <button class="btn btn-outline-danger mt-2">Deletar</button>
              </form>
            </th>
          </tr>

        <%})%>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>
<%- include ('../../partials/footer.ejs') %>

<script>

function confimarDelecao(event,form){
  event.preventDefault();
 var decision = confirm('Você quer deletar esta Categoria?');
 if(decision){
  form.submit();
 }
}

</script>

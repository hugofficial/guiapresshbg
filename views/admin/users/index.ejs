<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>

<div class="container mb-3">
  <hr />
  <h2>Usúarios</h2>
  <a class="btn btn-outline-info mt-1" 
  href="/admin/users/create">Criar nova usúario</a>
  <hr />
  <div class="cad text-center">
  <table class="table table-striped table-hover mb-5" >
    <thead class="thead-dark">
      <tr>
        <th class="align-text-bottom">Id</th>
        <th class="align-text-bottom">Usúario</th>
        <th class="align-text-bottom">E-mail</th>
        <th class="align-text-bottom">Alterar</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% users.forEach(user => {%>
          
          <tr>
            <th class="align-text-bottom"><%= user.id %></th>
            <th class="align-text-bottom"><%= user.name %></th>
            <th class="align-text-bottom"><%= user.email %></th>
            <th class="align-text-bottom">
             
                <a href="/admin/users/edit/<%= user.id %>" 
                  class="btn btn-outline-info mt-2"
                >
                Editar
                </a>
              

              <form method="POST" 
              action="/users/delete" 
              style="display:inline;" 
              onsubmit="confimarDelecao(event, this)"
              >

                <input type="hidden" name="id" value="<%= user.id %>">
                <button class="btn btn-outline-danger mt-2">Deletar</button>
              </form>
            </th>
          </tr>

        <%})%>
      </tr>
    </tbody>
  </table>
</div>
</div>

<%- include ('../../partials/footer.ejs') %>